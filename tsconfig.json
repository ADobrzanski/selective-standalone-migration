  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2018"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "outDir": "src",
    "rootDir": "src"
  }
}
